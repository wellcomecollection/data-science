    "settings": {
        "analysis": {
            "char_filter": {
                "hyphens_char_filter": {
                    "pattern": "-",
                    "type": "pattern_replace",
                    "replacement": ""
                }
            },
            "filter": {
                "shingle_filter": {
                    "type": "shingle",
